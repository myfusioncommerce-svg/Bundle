{
  "name": "Bundle Builder",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Build Your Own Bundle"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#D1513D"
    },
    {
      "type": "color",
      "id": "progress_bar_color",
      "label": "Progress Bar Color (Achieved)",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "reached_milestone_color",
      "label": "Reached Milestone Color",
      "default": "#28a745"
    },
    {
      "type": "color",
      "id": "checkout_btn_color",
      "label": "Checkout Button Color",
      "default": "#90FF90"
    },
    {
      "type": "color",
      "id": "checkout_btn_text_color",
      "label": "Checkout Button Text Color",
      "default": "#333333"
    }
  ]
}
{% endschema %}
